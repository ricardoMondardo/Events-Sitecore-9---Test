@using events.tac.local.Models;
@using Sitecore.Mvc.Extensions;
@using Sitecore.Mvc.Presentation

@model IEnumerable<NavigationItem>

<!-- [Related Events] -->
@using (Html.EditFrame(RenderingContext.Current.ContextItem.Paths.FullPath
, "Related Events", "Edit Related Events", null, null, null))
{
    <div class="bg-primary side-widget">
        <h4 class="text-uppercase">Other events you will like</h4>
        <div class="sidebar">
            <ul class="nav nav-pills nav-stacked">
                @foreach (var navItem in Model)
                {
                    <li>
                        <a href="@navItem.URL">@navItem.Title</a>
                    </li>
                }
            </ul>
        </div>
    </div>

}
<!-- [/Related Events] -->
